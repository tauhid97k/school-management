generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum VerifyType {
  EMAIL
  PASSWORD_RESET
}

enum genderType {
  MALE
  FEMALE
  OTHER
}

enum studentStatus {
  REGULAR
  IRREGULAR
}

enum attendanceType {
  PRESENT
  ABSENT
  LATE
  LEAVE
}

enum exam_status {
  ACTIVE
  INACTIVE
  CANCELLED
  CONCLUDED
}

enum exam_result_status {
  PENDING
  REVALUATING
  PUBLISHED
}

enum noticeType {
  DRAFT
  ALL
  TEACHERS
  CLASSES
}

enum teacherNoticeStatus {
  DRAFT
  PUBLISHED
}

enum assignmentStatus {
  ACTIVE
  DRAFT
  CANCELLED
  CONCLUDED
}

enum homeworkStatus {
  PENDING
  REVISION
  ACCEPTED
  REJECTED
}

enum PaymentStatus {
  PAID
  UNPAID
}

enum weekDay {
  SATURDAY
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

enum informationStatus {
  ACTIVE
  INACTIVE
}

// Super Admin
model super_admins {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

// School Admin
model admins {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  password          String
  profile_img       String?
  designation       String
  email_verified_at DateTime?
  phone_number      String?
  address           String?
  is_suspended      Boolean   @default(false)
  school_name       String    @unique
  school_address    String
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  user_roles          user_roles[]
  verification_tokens verification_tokens[]
  personal_tokens     personal_tokens[]
  salaries            salaries[]
  todo_list           todo_list[]
}

// School Staffs
model staffs {
  id                Int        @id @default(autoincrement())
  name              String
  email             String     @unique
  role              String
  designation_id    Int?
  password          String
  email_verified_at DateTime?
  date_of_birth     DateTime
  blood_group       Json
  religion          String
  gender            genderType
  age               Int
  joining_date      DateTime?
  phone_number      String
  address           String
  salary            Int
  profile_img       String?
  cover_letter      String?    @db.Text
  education         Json?      @db.Json
  experience        Json?      @db.Json
  is_suspended      Boolean    @default(false)
  created_at        DateTime   @default(now())
  updated_at        DateTime   @updatedAt

  designation designations? @relation(fields: [designation_id], references: [id], onDelete: SetNull)
  staff_role  roles         @relation(fields: [role], references: [name], onDelete: Cascade)

  personal_tokens     personal_tokens[]
  verification_tokens verification_tokens[]
  user_roles          user_roles?
  salaries            salaries[]
}

// Teacher
model teachers {
  id                Int        @id @default(autoincrement())
  name              String
  email             String     @unique
  designation_id    Int?
  password          String
  email_verified_at DateTime?
  date_of_birth     DateTime
  blood_group       Json
  religion          String
  gender            genderType
  age               Int
  joining_date      DateTime?
  phone_number      String
  address           String     @db.Text
  salary            Int
  profile_img       String?
  cover_letter      String?    @db.Text
  education         Json       @db.Json
  experience        Json?      @db.Json
  is_suspended      Boolean    @default(false)
  created_at        DateTime   @default(now())
  updated_at        DateTime   @updatedAt

  designation designations? @relation(fields: [designation_id], references: [id], onDelete: SetNull)

  user_roles           user_roles[]
  verification_tokens  verification_tokens[]
  personal_tokens      personal_tokens[]
  attendance           teacher_attendance[]
  teacher_classes      teacher_classes[]
  teacher_sections     teacher_sections[]
  teacher_assignments  teacher_assignments[]
  teacher_subjects     teacher_subjects[]
  teacher_notices      teacher_notices[]
  teacher_applications teacher_applications[]
  salaries             salaries[]
  routines             routines[]
  todo_list            todo_list[]
}

// Student
model students {
  id                Int        @id @default(autoincrement())
  admission_no      String     @unique
  admission_date    DateTime
  group_id          Int
  class_id          Int
  section_id        Int?
  roll              String
  name              String
  email             String     @unique
  password          String
  email_verified_at DateTime?
  date_of_birth     DateTime
  blood_group       Json
  religion          String
  gender            genderType
  age               Int
  phone_number      String?
  address           String
  profile_img       String?
  guardians         Json?      @db.Json
  is_suspended      Boolean    @default(false)
  created_at        DateTime   @default(now())
  updated_at        DateTime   @updatedAt

  class   classes   @relation(fields: [class_id], references: [id], onDelete: Cascade)
  section sections? @relation(fields: [section_id], references: [id], onDelete: Cascade)
  group   groups    @relation(fields: [group_id], references: [id], onDelete: Cascade)

  user_roles           user_roles[]
  verification_tokens  verification_tokens[]
  personal_tokens      personal_tokens[]
  class_attendance     class_attendance[]
  exam_results         exam_results[]
  student_homework     student_homeworks[]
  student_applications student_applications[]
  student_fees         student_fees[]
  todo_list            todo_list[]

  @@index([roll])
  @@index([class_id])
  @@index([phone_number])
}

// Auth Token
model personal_tokens {
  id            Int      @id @default(autoincrement())
  admin_id      Int?
  teacher_id    Int?
  student_id    Int?
  staff_id      Int?
  user_device   String?
  refresh_token String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  reachers teachers? @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  admins   admins?   @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  ttudents students? @relation(fields: [student_id], references: [id], onDelete: Cascade)
  staffs   staffs?   @relation(fields: [staff_id], references: [id], onDelete: Cascade)

  @@index([admin_id])
  @@index([teacher_id])
  @@index([student_id])
  @@index([refresh_token])
}

// Verification token (Email and password reset)
model verification_tokens {
  id          Int        @id @default(autoincrement())
  admin_id    Int?
  teacher_id  Int?
  student_id  Int?
  staff_id    Int?
  code        Int
  token       String
  verify_type VerifyType
  expires_at  DateTime
  created_at  DateTime   @default(now())

  reachers teachers? @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  admins   admins?   @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  ttudents students? @relation(fields: [student_id], references: [id], onDelete: Cascade)
  staffs   staffs?   @relation(fields: [staff_id], references: [id], onDelete: Cascade)

  @@index([admin_id])
  @@index([teacher_id])
  @@index([student_id])
  @@index([code, token])
}

// User's role
model user_roles {
  id         Int  @id @default(autoincrement())
  admin_id   Int? @unique
  teacher_id Int? @unique
  student_id Int? @unique
  staff_id   Int? @unique
  role_id    Int

  reachers teachers? @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  roles    roles     @relation(fields: [role_id], references: [id])
  admins   admins?   @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  ttudents students? @relation(fields: [student_id], references: [id], onDelete: Cascade)
  staffs   staffs?   @relation(fields: [staff_id], references: [id], onDelete: Cascade)

  @@index([role_id])
  @@index([admin_id])
  @@index([teacher_id])
  @@index([student_id])
  @@index([staff_id])
}

// Roles Permissions
model role_permissions {
  id            Int @id @default(autoincrement())
  role_id       Int
  permission_id Int

  roles       roles       @relation(fields: [role_id], references: [id], onDelete: Cascade)
  permissions permissions @relation(fields: [permission_id], references: [id], onDelete: Cascade)

  @@index([role_id, permission_id])
}

// Roles
model roles {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user_roles       user_roles[]
  role_permissions role_permissions[]
  staffs           staffs[]
  todo_list        todo_list[]
}

// Permissions
model permissions {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  group      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  role_permissions role_permissions[]
}

// Designations
model designations {
  id         Int        @id @default(autoincrement())
  title      String     @unique
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  teachers   teachers[]
  staffs     staffs[]
}

// Room Management
model rooms {
  id          Int        @id @default(autoincrement())
  room_number String     @unique
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  sections    sections[]
}

// Group 
model groups {
  id             Int              @id @default(autoincrement())
  group_name     String           @unique
  created_at     DateTime         @default(now())
  updated_at     DateTime         @updatedAt
  subject_groups subject_groups[]
  students       students[]
}

// Subject 
model subjects {
  id                  Int                   @id @default(autoincrement())
  name                String
  code                String                @unique
  created_at          DateTime              @default(now())
  updated_at          DateTime              @updatedAt
  subject_groups      subject_groups[]
  subject_classes     subject_classes[]
  exam_routines       exam_routines[]
  teacher_assignments teacher_assignments[]
  teacher_subjects    teacher_subjects[]
  routines            routines[]
}

// Subject Groups
model subject_groups {
  id         Int      @id @default(autoincrement())
  subject_id Int
  group_id   Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  subject subjects @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  group   groups   @relation(fields: [group_id], references: [id], onDelete: Cascade)

  @@index([subject_id])
  @@index([group_id])
}

// Subject Classes
model subject_classes {
  id         Int      @id @default(autoincrement())
  subject_id Int
  class_id   Int?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  subject subjects @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  class   classes? @relation(fields: [class_id], references: [id], onDelete: Cascade)

  @@index([subject_id])
  @@index([class_id])
}

// Class Management
model classes {
  id         Int      @id @default(autoincrement())
  class_name String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  sections            sections[]
  subject_classes     subject_classes[]
  studens             students[]
  class_attendance    class_attendance[]
  exam_results        exam_results[]
  teacher_classes     teacher_classes[]
  teacher_assignments teacher_assignments[]
  teacher_notices     teacher_notices[]
  class_routines      class_routines[]
  exams               exams[]
}

// Section Management
model sections {
  id           Int      @id @default(autoincrement())
  class_id     Int
  room_id      Int?
  section_name String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  class               classes               @relation(fields: [class_id], references: [id], onDelete: Cascade)
  room                rooms?                @relation(fields: [room_id], references: [id])
  teacher_sections    teacher_sections[]
  teacher_assignments teacher_assignments[]
  students            students[]
  teacher_notices     teacher_notices[]
  class_routines      class_routines[]
  exams               exams[]

  @@index([section_name])
  @@index([class_id])
  @@index([room_id])
}

// Teacher classes 
model teacher_classes {
  id         Int      @id @default(autoincrement())
  class_id   Int
  teacher_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  class   classes  @relation(fields: [class_id], references: [id], onDelete: Cascade)
  teacher teachers @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

  @@index([class_id])
  @@index([teacher_id])
}

// Teacher sections
model teacher_sections {
  id         Int      @id @default(autoincrement())
  section_id Int?
  teacher_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  section sections? @relation(fields: [section_id], references: [id], onDelete: Cascade)
  teacher teachers  @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

  @@index([section_id])
  @@index([teacher_id])
}

// Teacher subjects
model teacher_subjects {
  id         Int      @id @default(autoincrement())
  subject_id Int
  teacher_id Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  subject subjects @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  teacher teachers @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

  @@index([subject_id])
  @@index([teacher_id])
}

// Student Classes

// Exam Categories
model exam_categories {
  id         Int      @id @default(autoincrement())
  exam_name  String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  exams      exams[]
}

// Exams
model exams {
  id               Int         @id @default(autoincrement())
  exam_category_id Int
  class_id         Int
  section_id       Int?
  status           exam_status @default(INACTIVE)
  created_at       DateTime    @default(now())
  updated_at       DateTime    @updatedAt

  exam_category exam_categories @relation(fields: [exam_category_id], references: [id])
  class         classes         @relation(fields: [class_id], references: [id], onDelete: Cascade)
  section       sections?       @relation(fields: [section_id], references: [id], onDelete: Cascade)

  exam_routines           exam_routines[]
  exam_results            exam_results[]
  exam_results_publishing exam_results_publishing[]

  @@index([exam_category_id])
  @@index([class_id])
  @@index([section_id])
  @@index([status])
}

// Exam Routine
model exam_routines {
  id         Int      @id @default(autoincrement())
  exam_id    Int
  subject_id Int
  full_mark  Int
  start_time DateTime
  end_time   DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  exam    exams    @relation(fields: [exam_id], references: [id], onDelete: Cascade)
  subject subjects @relation(fields: [subject_id], references: [id], onDelete: Cascade)

  @@index([exam_id, subject_id])
}

// Exam Grading System
model grades {
  id            Int      @id @default(autoincrement())
  start_range   Int
  end_range     Int
  grading_name  String   @unique
  grading_point Float
  comment       String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

// Exam Results
model exam_results {
  id             Int      @id @default(autoincrement())
  class_id       Int
  exam_id        Int
  student_id     Int
  subjects_marks Json
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  class   classes  @relation(fields: [class_id], references: [id], onDelete: Cascade)
  exam    exams    @relation(fields: [exam_id], references: [id], onDelete: Cascade)
  student students @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@index([class_id])
  @@index([exam_id])
  @@index([student_id])
}

// Exam results publish
model exam_results_publishing {
  id         Int                @id @default(autoincrement())
  exam_id    Int                @unique
  status     exam_result_status @default(PENDING)
  created_at DateTime           @default(now())
  updated_at DateTime           @updatedAt

  exam exams @relation(fields: [exam_id], references: [id], onDelete: Cascade)
}

// Teacher Attendance
model teacher_attendance {
  id         Int            @id @default(autoincrement())
  teacher_id Int
  date       DateTime       @db.Date
  status     attendanceType
  note       String?
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt

  teacher teachers @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

  @@index([teacher_id])
  @@index([date])
  @@index([status])
}

// Expense Categories
model expense_categories {
  id            Int        @id @default(autoincrement())
  category_name String     @unique
  description   String?
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  expenses      expenses[]
}

// Expenses
model expenses {
  id                  Int      @id @default(autoincrement())
  expense_category_id Int
  title               String
  description         String?
  amount              Float    @default(0)
  invoice_no          String?
  date                DateTime @db.Date
  attachment          String?
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  expense_category expense_categories @relation(fields: [expense_category_id], references: [id], onDelete: Cascade)
}

// Salaries
model salaries {
  id             Int           @id @default(autoincrement())
  user_type      String
  teacher_id     Int?
  admin_id       Int?
  staff_id       Int?
  salary_date    DateTime      @db.Date
  salary_amount  Float
  bonus          Float?        @default(0)
  advance        Float?        @default(0)
  due            Float?        @default(0)
  payment_status PaymentStatus
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  teacher teachers? @relation(fields: [teacher_id], references: [id])
  admin   admins?   @relation(fields: [admin_id], references: [id])
  staff   staffs?   @relation(fields: [staff_id], references: [id])

  @@index([teacher_id])
  @@index([admin_id])
  @@index([staff_id])
  @@index([user_type])
  @@index([salary_date])
}

// Student Fees
model student_fees {
  id             Int           @id @default(autoincrement())
  student_id     Int
  fee_type       String
  fee_amount     Float
  fine_type      String?
  fine_amount    Float?
  due_type       String?
  due_amount     Float?
  payment_status PaymentStatus
  payment_date   DateTime      @db.Date
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  student students @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@index([student_id])
  @@index([payment_status])
  @@index([payment_date])
}

// Notices (Official)
model notices {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  type        noticeType
  attachment  String?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt

  @@index([type])
}

// Teacher Notices (To the class/Section)
model teacher_notices {
  id          Int                 @id @default(autoincrement())
  teacher_id  Int
  class_id    Int
  section_id  Int?
  title       String
  status      teacherNoticeStatus
  description String?
  attachment  String?
  created_at  DateTime            @default(now())
  updated_at  DateTime            @updatedAt

  teacher teachers  @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  class   classes   @relation(fields: [class_id], references: [id], onDelete: Cascade)
  section sections? @relation(fields: [section_id], references: [id], onDelete: Cascade)

  @@index([class_id])
  @@index([section_id])
  @@index([status])
}

// Class Routines
model class_routines {
  id         Int      @id @default(autoincrement())
  class_id   Int
  section_id Int?
  week_day   weekDay
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  class    classes    @relation(fields: [class_id], references: [id], onDelete: Cascade)
  section  sections?  @relation(fields: [section_id], references: [id], onDelete: Cascade)
  routines routines[]

  @@index([class_id])
  @@index([section_id])
  @@index([week_day])
}

// Routines
model routines {
  id               Int      @id @default(autoincrement())
  class_routine_id Int
  subject_id       Int
  teacher_id       Int
  start_time       DateTime
  end_time         DateTime
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  subject subjects       @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  routine class_routines @relation(fields: [class_routine_id], references: [id], onDelete: Cascade)
  teacher teachers       @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

  @@index([class_routine_id])
  @@index([teacher_id])
  @@index([start_time])
}

// Class Attendance (Students)
model class_attendance {
  id         Int            @id @default(autoincrement())
  class_id   Int
  student_id Int
  date       DateTime       @db.Date
  status     attendanceType
  note       String?
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt

  class   classes  @relation(fields: [class_id], references: [id], onDelete: Cascade)
  student students @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@index([class_id, student_id])
  @@index([date])
  @@index([status])
}

// Teacher assignments (For students)
model teacher_assignments {
  id              Int              @id @default(autoincrement())
  class_id        Int
  section_id      Int?
  teacher_id      Int
  subject_id      Int
  title           String
  description     String?
  attachment      String?
  assignment_time DateTime
  submission_time DateTime
  status          assignmentStatus
  created_at      DateTime         @default(now())
  updated_at      DateTime         @updatedAt

  class            classes             @relation(fields: [class_id], references: [id], onDelete: Cascade)
  section          sections?           @relation(fields: [section_id], references: [id], onDelete: Cascade)
  teacher          teachers            @relation(fields: [teacher_id], references: [id], onDelete: Cascade)
  subject          subjects            @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  student_homework student_homeworks[]

  @@index([class_id])
  @@index([section_id])
  @@index([teacher_id])
  @@index([status])
}

// Students Homework
model student_homeworks {
  id            Int            @id @default(autoincrement())
  student_id    Int
  assignment_id Int
  description   String?
  attachment    String?
  comment       String?
  status        homeworkStatus @default(PENDING)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt

  student    students            @relation(fields: [student_id], references: [id], onDelete: Cascade)
  assignment teacher_assignments @relation(fields: [assignment_id], references: [id], onDelete: Cascade)

  @@index([assignment_id])
  @@index([student_id])
  @@index([status])
}

// Teacher Applications
model teacher_applications {
  id          Int      @id @default(autoincrement())
  teacher_id  Int
  subject     String
  description String
  date        DateTime
  comment     String?
  attachment  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  teacher teachers @relation(fields: [teacher_id], references: [id], onDelete: Cascade)

  @@index([teacher_id])
  @@index([date])
}

// Student Applications
model student_applications {
  id          Int      @id @default(autoincrement())
  student_id  Int
  subject     String
  description String
  date        DateTime
  comment     String?
  attachment  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  student students @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@index([student_id])
  @@index([date])
}

// Todo List
model todo_list {
  id           Int      @id @default(autoincrement())
  admin_id     Int?
  teacher_id   Int?
  student_id   Int?
  role         String
  title        String
  description  String?
  is_completed Boolean  @default(false)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

